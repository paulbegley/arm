{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
  "parameters": {
    "vm": {
      "type": "object",
      "defaultValue": {
        "machine": [
          {
            "name": "vm001",
            "pip": "vm001-pip",
            "vault": {
              "name": "vmsecrets",
              "resourceGroup": "this-rg-demo"
            }
          }

        ]

      }
    },
    "sa": {
      "type": "object",
      "defaultValue": {
        "instance": [
          { "name": "saaaaaaaaa0001" }
        ]
      }
    },
    "nic": {
      "type": "object",
      "defaultValue": {
        "instance": [
          {
            "name": "nic001"
          }
        ]
      }
    },
    "adminPassword": { "type": "securestring" },

      "artifactsLocation": {
          "type": "string",
          "metadata": {
              "description": "Auto-generated container in staging storage account to receive post-build staging folder upload"
          }
      },
      "artifactsLocationSasToken": {
          "type": "securestring",
          "metadata": {
              "description": "Auto-generated token to access _artifactsLocation"
          }
      }
  },
    "variables": {
        "installLampLinuxScriptFolder": "CustomScripts",
        "installLampLinuxScriptFileName": "installLampLinux.sh"
    },
  "resources": [
    {
      "comments": "Generalized from resource: '/subscriptions/50455ae4-c3b0-4fc9-ab2e-425cfec81f46/resourceGroups/rg-backup-poc/providers/Microsoft.Compute/virtualMachines/vm-backup-poc'.",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('vm').machine[0].name]",
      "apiVersion": "2015-06-15",
      "location": "westeurope",
      "properties": {
        "hardwareProfile": {
          "vmSize": "Standard_DS1_v2"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "Canonical",
            "offer": "UbuntuServer",
            "sku": "12.04.5-LTS",
            "version": "latest"
          },
          "osDisk": {
            "name": "[parameters('vm').machine[0].name]",
            "createOption": "FromImage",
            "vhd": {
              "uri": "[concat('https', '://', parameters('sa').instance[0].name, '.blob.core.windows.net', concat('/vhds/', parameters('vm').machine[0].name,'20161223102816.vhd'))]"
            },
            "caching": "ReadWrite"
          },
          "dataDisks": []
        },
        "osProfile": {
          "computerName": "[parameters('vm').machine[0].name]",
          "adminUsername": "azureuser",
          "linuxConfiguration": {
            "disablePasswordAuthentication": false
          },
          "secrets": [],
          "adminPassword": "[parameters('adminPassword')]"
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('nic').instance[0].name)]"
            }
          ]
        }
      },
      "resources": [
        {
          "name": "installLampLinux",
          "type": "extensions",
          "location": "westeurope",
          "apiVersion": "2015-06-15",
          "dependsOn": [
            "[resourceId('Microsoft.Compute/virtualMachines', parameters('vm').machine[0].name)]"
          ],
          "tags": {
            "displayName": "installLampLinux"
          },
          "properties": {
            "publisher": "Microsoft.OSTCExtensions",
            "type": "CustomScriptForLinux",
            "typeHandlerVersion": "1.4",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "fileUris": [
                "[concat(parameters('artifactsLocation'), '/', variables('installLampLinuxScriptFolder'), '/', variables('installLampLinuxScriptFileName'), parameters('artifactsLocationSasToken'))]"
              ],
              "commandToExecute": "[concat('sh ', variables('installLampLinuxScriptFileName'), ' Azureuser!!!')]"
            }
          }
        }
      ],
      "dependsOn": [

      ]
    },
    {
      "comments": "Generalized from resource: '/subscriptions/50455ae4-c3b0-4fc9-ab2e-425cfec81f46/resourceGroups/rg-backup-poc/providers/Microsoft.Compute/virtualMachines/vm-backup-poc'.",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('vm').machine[1].name]",
      "apiVersion": "2015-06-15",
      "location": "westeurope",
      "properties": {
        "hardwareProfile": {
          "vmSize": "Standard_DS1_v2"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "Canonical",
            "offer": "UbuntuServer",
            "sku": "12.04.5-LTS",
            "version": "latest"
          },
          "osDisk": {
            "name": "[parameters('vm').machine[1].name]",
            "createOption": "FromImage",
            "vhd": {
              "uri": "[concat('https', '://', parameters('sa').instance[1].name, '.blob.core.windows.net', concat('/vhds/', parameters('vm').machine[1].name,'20161223102816.vhd'))]"
            },
            "caching": "ReadWrite"
          },
          "dataDisks": []
        },
        "osProfile": {
          "computerName": "[parameters('vm').machine[1].name]",
          "adminUsername": "azureuser",
          "linuxConfiguration": {
            "disablePasswordAuthentication": false
          },
          "secrets": [],
          "adminPassword": "[parameters('adminPassword')]"
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', parameters('nic').instance[1].name)]"
            }
          ]
        }
      },
      "resources": [
        {
          "name": "installLampLinux",
          "type": "extensions",
          "location": "westeurope",
          "apiVersion": "2015-06-15",
          "dependsOn": [
            "[resourceId('Microsoft.Compute/virtualMachines', parameters('vm').machine[1].name)]"
          ],
          "tags": {
            "displayName": "installLampLinux"
          },
          "properties": {
            "publisher": "Microsoft.OSTCExtensions",
            "type": "CustomScriptForLinux",
            "typeHandlerVersion": "1.4",
            "autoUpgradeMinorVersion": true,
            "settings": {
              "fileUris": [
                "[concat(parameters('artifactsLocation'), '/', variables('installLampLinuxScriptFolder'), '/', variables('installLampLinuxScriptFileName'), parameters('artifactsLocationSasToken'))]"
              ],
              "commandToExecute": "[concat('sh ', variables('installLampLinuxScriptFileName'), ' Azureuser!!!')]"
            }
          }
        }
      ],
      "dependsOn": [

      ]
    }
  ],
    "outputs": {
    }
}